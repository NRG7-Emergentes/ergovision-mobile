<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow all connections for development and production -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system" />
            <!-- Trust user-added certificates (for debugging) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Specific domain configuration for your backend -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">ergovision-backend.onrender.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>

